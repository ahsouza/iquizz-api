    <form action= '/api/new' method= 'POST'>
      <i class="material-icons">person</i>&nbsp;&nbsp;&nbsp;
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" onkeyup="this.value = this.value.toUpperCase();" name="firstName" type="text" id="user_firstName" required autofocus>
          <label class="mdl-textfield__label" for="user_firstName">Nome...</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" onkeyup="this.value = this.value.toUpperCase();" name="lastName" type="text" id="user_lastName" required>
          <label class="mdl-textfield__label" for="user_lastName">Sobrenome...</label>
        </div>
        <br/>
        
        <i class="material-icons">contact_mail</i>&nbsp;&nbsp;&nbsp;
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="email" type="text" onkeyup="this.value = this.value.toLowerCase();" id="user_email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
          <label class="mdl-textfield__label" for="user_email">Email...</label>
        </div>
        <br/><br/>
        <i class="material-icons">alternate_email</i>&nbsp;&nbsp;&nbsp;
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="username" onkeyup="this.value = this.value.toLowerCase();" type="text" id="user_username" required>
          <label class="mdl-textfield__label" for="user_username">Username...</label>
        </div>

        
        <i class="material-icons">sentiment_satisfied_alt</i>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="status" type="text" id="user_status">
          <label class="mdl-textfield__label" for="user_status">Digite seu status...</label>
        </div>
        <br/>
        <i class="material-icons">vpn_key</i>&nbsp;&nbsp;&nbsp;
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="password" type="password" id="user_password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" title="A senha deve conter pelo menos 8 caracteres ou mais de números e letras maiúscula e minúscula">
          <label class="mdl-textfield__label" for="user_password">Senha...</label>
        </div>

        <i class="material-icons">security</i>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="conf_password" type="password" id="user_conf_password" required>
          <label class="mdl-textfield__label" for="user_conf_password">Confirme sua senha...</label>
        </div>

