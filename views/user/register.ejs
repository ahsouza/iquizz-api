<h4 id="location">
  <i class="material-icons">location_on</i>&nbsp;&nbsp;
  Localização
</h4>
<hr>

<div class="location-div" style="display: none;">
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input class="mdl-textfield__input" name="cep" type="text" id="cep" pattern="[0-9]{8}" title="Digite o CEP com seus '8'dígitos númericos">
    <label class="mdl-textfield__label" for="cep">CEP...</label>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input class="mdl-textfield__input" name="logradouro" type="text" id="logradouro">
      <label class="mdl-textfield__label" for="logradouro">Logradouro...</label>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input class="mdl-textfield__input" name="complemento" type="text" id="complemento">
    <label class="mdl-textfield__label" for="complemento">Complemento...</label>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input class="mdl-textfield__input" name="numero" type="text" id="numero" pattern="[0-9]*" title="Digite o NÚMERO do local com dígitos númericos">
    <label class="mdl-textfield__label" for="numero">Número...</label>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
