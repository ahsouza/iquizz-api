<% include ../header.ejs %>

<style>
* {
  box-sizing: border-box;
}
body {
  line-height: 1.5;
  font-family: 'Lato';
  -webkit-font-smoothing: antialiased;
  overflow-x: hidden;
}
h1,
h2,
h3,
p {
  font-weight: 300;
  margin: 0 0 2.4rem 0;
}
h1,
h2,
h3 {
  line-height: 1.3;
}
a {
  text-decoration: none;
  color: inherit;
  font-weight: 400;
}



.image-avatar {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  margin: 20px;
  -o-object-fit: cover;
  object-fit: cover;
  -o-object-position: center right;
  object-position: center right;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  transition: all 0.3s cubic-bezier(.25,.8,.25,1);
}

.image-avatar:hover {
  width: 160px;
  height: 160px;
  border-radius: 50%;
  margin: 20px;
  -o-object-fit: cover;
  object-fit: cover;
  -o-object-position: center right;
  object-position: center right;
  box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
}

.user-name-profile:hover {
	font-size: 26px;
	transition: all 0.3s cubic-bezier(.25,.8,.25,1);
}

</style>



<div class="mdl-grid">



  <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
  	
  	<style>
	  .demo-card-square.mdl-card {
	    width: 75%;
	    height: 520px;
	  }
	  .demo-card-square > .mdl-card__title {
	    color: #fff;
	    --female: pink;
	    --male: #4fc3f7;
	    <% if ((account.user.genre) == 'masculino') { %>
	      background:
	        url('../assets/demos/dog.png') bottom right 15% no-repeat var(--male);
	    <% } else { %>
	      background:
	      url('../assets/demos/dog.png') bottom right 15% no-repeat var(--female);

	    <% }  %>
	  }

	  #admin:hover {
		transition: all 0.3s cubic-bezier(.25,.8,.25,1);
		box-shadow: 0 6px 10px rgba(0,0,0,0.25), 0 5px 5px rgba(0,0,0,0.22);
	  }

	  #share:hover {
		transition: all 0.3s cubic-bezier(.25,.8,.25,1);
		box-shadow: 0 6px 10px rgba(0,0,0,0.25), 0 5px 5px rgba(0,0,0,0.22);
	  }

	  #play:hover {
		transition: all 0.3s cubic-bezier(.25,.8,.25,1);
		box-shadow: 0 6px 10px rgba(0,0,0,0.25), 0 5px 5px rgba(0,0,0,0.22);
	  }
	</style>

	<div class="demo-card-square mdl-card mdl-shadow--2dp animated fadeInLeft delay-30ms">
	  

	  <div class="mdl-card__title mdl-card--expand">
	    
	    <button id="admin" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored animated fadeInLeft delay-1s" value="<%= account.user.username %>" name="solicitationFriendship" type="submit"      style="background-color: #aa00c7; color: #fff;">
	      <i class="fas fa-award"></i>
	    </button>
	  	<div class="mdl-tooltip mdl-tooltip--up" data-mdl-for="admin">
		   <strong>Grupos</strong>
	    </div>

	    <button id="play" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored animated fadeInLeft delay-1s" value="<%= account.user.username %>" name="solicitationFriendship" type="submit" style="background-color: #64dd17; color: #fff;">
	      <i class="fas fa-gamepad"></i>
	    </button>
	    <div class="mdl-tooltip mdl-tooltip--up" data-mdl-for="play">
		   <strong>Enviar Convite</strong>
	    </div>

	  	<button id="share" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored animated fadeInLeft delay-1s" value="<%= account.user.username %>" name="solicitationFriendship" type="submit" style="background-color: #ffea00 color: #fff;">
	      <i class="material-icons">share</i>
	    </button>

	    <div class="mdl-tooltip mdl-tooltip--up" data-mdl-for="share">
		   <strong>Compartilhar Perfil</strong>
	    </div>

  		<img src="https://i2.cdn.turner.com/cnnnext/dam/assets/140926165711-john-sutter-profile-image-large-169.jpg" alt=`image profile iquizz <%= account.user.username %>` class="image-avatar" />


	    <h1 class="mdl-card__title-text user-name-profile animated fadeInRight delay-1s"><%= account.user.firstName + ' ' + account.user.lastName %></h1>
	    
	  </div>

	  <div class="mdl-card__supporting-text animated fadeIn delay-1s">

	    <br>
	  	
	  	<a id="points" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      <span style="font-size: 20px; color: #00e5ff">
	      	<% if (account.user.email) { %>
			   <i class="fas fa-gem"></i>
			<% } %>
		  </span>
		  &nbsp;+ <%= account.user.gems %>
		  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="points">
            <strong>Gemas</strong>
          </div>
	    </a>

	  	<a id="ghostGames" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      <span style="font-size: 20px; color: #607d8b;">
			   <i class="fas fa-ghost"></i>
		  </span>
		  &nbsp;+ <%= account.user.gems %>
		  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="ghostGames">
            <strong>Quiz Fantasma</strong>
          </div>
	    </a>

	    <a id="medal" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      <span style="font-size: 20px; color: #fdd835;">
			   <i class="fas fa-medal"></i>
		  </span>
		  &nbsp;+ <%= account.user.gems %>
		  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="medal">
            <strong>Conquistas Desbloqueadas</strong>
          </div>
	    </a>
	    <br/><br/>

	    <a id="hand-holding" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      <span style="font-size: 20px; color: orange">
			   <i class="fas fa-dollar-sign"></i>
		  </span>
		  &nbsp;+ <%= account.user.credits %>
		  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="hand-holding">
            <strong>Créditos</strong>
          </div>
	    </a>

	    <a id="hand-holding-heart" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      <span style="font-size: 20px; color: red">
			   <i class="fas fa-heart"></i>
		  </span>
		  &nbsp;+ <%= account.user.vitality %>
		  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="hand-holding-heart">
            <strong>Vitalidade</strong>
          </div>
	    </a>

	    <br/><br/><br/><br/>
	  	<a id="location" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      <span style="font-size: 20px; color: #90a4ae;">
			<i class="fas fa-city"></i>
		  </span>
		  &nbsp;<%= account.user.location.addressCity %>/<%= account.user.location.addressState %>
		  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="location">
            <strong>Moro Em</strong>
          </div>
	    </a>

	    <% if ((account.user.level) == 'mago') { %>
		    <a id="hat-wizard" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
		      <span style="font-size: 20px; color: #005cb2">
				<i class="fas fa-hat-wizard"></i>
			  </span>
			  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="hat-wizard">
	            <strong>Nível VI<br>Mago</strong>
	          </div>
		    </a>
		<% } %>

		<% if ((account.user.level) == 'guerreiro') { %>
		    <a id="guerreiro" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
		      <span style="font-size: 20px; color: #005cb2">
				<i class="fas fa-jedi"></i>
			  </span>
			  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="guerreiro">
	            <strong>Nível IV<br>Guerreiro</strong>
	          </div>
		    </a>
		<% } %>

		<% if ((account.user.level) == 'templario') { %>
		    <a id="templario" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
		      <span style="font-size: 20px; color: #005cb2">
				<i class="fas fa-brain"></i>
			  </span>
			  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="templario">
	            <strong>Nível V<br>Templário</strong>
	          </div>
		    </a>
		<% } %>

		<% if ((account.user.level) == 'globin') { %>
		    <a id="globin" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
		      <span style="font-size: 20px; color: #7cb342;">
				<i class="fas fa-frog"></i>
			  </span>
			  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="globin">
	            <strong>Nível I<br>Globin</strong>
	          </div>
		    </a>
		<% } %>

		<% if ((account.user.level) == 'elfo') { %>
		    <a id="elfo" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
		      <span style="font-size: 20px; color: #005cb2">
				<i class="fab fa-galactic-senate"></i>
			  </span>
			  <div class="mdl-tooltip mdl-tooltip--top" data-mdl-for="elfo">
	            <strong>Nível III<br>Elfo</strong>
	          </div>
		    </a>
		<% } %>
		    

	  </div>
		
	  	
	  	<% if((account.user.genre) == 'masculino') { %>
	  	  <div class="mdl-card__actions mdl-card--border" style="background-color: #81d4fa;">
	  	<% } else { %>
	  	  <div class="mdl-card__actions mdl-card--border" style="background-color: #ffc1e3;">
	  	<% } %>

          <% let result = account.friends.find( friend => friend.from === account.user.username && friend.to === account.session.username || friend.from === account.session.username && friend.to === account.user.username); %> 


	    <% if (result) { %>
	    
		
		<button id="blockContact" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored animated fadeIn delay-1s" value="<%= account.user.username %>" name="solicitationFriendship" type="submit" style="background-color: #aa00c7; color: #fff;">
	      <span style="font-size: 20px; color: #fff">
			<i class="fas fa-user-alt-slash"></i>
		  </span>
	    </button>
	    <div class="mdl-tooltip mdl-tooltip--right" data-mdl-for="blockContact">
	      <strong>Bloquear Contato</strong>
	    </div>

		    <a href='/api/message/<%= account.user._id %>' id="sms" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect animated fadeIn delay-1s" style="margin-left:75%">
		      
			      <i class="material-icons" style="font-size: 40px; color: #fff;">
		            textsms
		          </i>
		      
			  <div class="mdl-tooltip mdl-tooltip--left" data-mdl-for="sms">
		        <strong>Enviar Mensagem</strong>
		      </div>
		    </a>
	    <% } else { %>


            <% let results = account.solicitations.find( solicitation => solicitation.suitorUsername === account.session.username && solicitation.toRecipient === account.user.username || solicitation.suitorUsername === account.user.username && solicitation.toRecipient === account.session.username); %>

                <% if(results) { %>
                    <button id="solicitationS" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored animated fadeIn delay-1s" style="background-color: gray; color: #fff; margin-left:90%">
                        <i class="material-icons">send</i>
                    </button>  

                    <div class="mdl-tooltip mdl-tooltip--left" data-mdl-for="solicitationS">
				      <strong>Enviada</strong>
				    </div>
                            
                <% } else { %>
                    
		    	<form action="/api/ranking" method = "POST">
				    <button id="sendSolicitation" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored animated fadeIn delay-1s" value="<%= account.user.username %>" name="solicitationFriendship" type="submit"      style="background-color: #00e676; color: #fff; margin-left:85%">
	                    <i class="material-icons">person_add</i>
	                </button>
			    </form>
   
                <% } %>









		    
	    <% } %>

	  </div>
	</div>

  </div>



  <div class="mdl-cell mdl-cell--4-col mdl-cell--6-col-tablet">
  	PUBLICAÇÕES RECENTES
  </div>



  <div class="mdl-cell mdl-cell--2-col mdl-cell--4-col-phone">
    2 (4 phone)
  </div>



</div>


<% include ../footer.ejs %>