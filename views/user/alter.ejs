    <div class="demo-card-wide mdl-card mdl-shadow--2dp">

 <form action= '/api/edit' method= 'POST'>

      <i class="material-icons">person</i>&nbsp;&nbsp;&nbsp;
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="firstName" type="text" value="<%= account.session.firstName %>" id="user_firstName" required>
          <label class="mdl-textfield__label" for="user_firstName">Nome...</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="lastName" value="<%= account.session.lastName %>" type="text" id="user_lastName" required>
          <label class="mdl-textfield__label" for="user_lastName">Sobrenome...</label>
        </div>


        <br/>
        
        <i class="material-icons">contact_mail</i>&nbsp;&nbsp;&nbsp;
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="email" type="text" value="<%= account.session.email %>" id="user_email" required>
          <label class="mdl-textfield__label" for="user_email">Email...</label>
        </div>
<br/><br/>
        <i class="material-icons">alternate_email</i>&nbsp;&nbsp;&nbsp;
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="username" type="text" value="<%= account.session.username %>" id="user_username" required>
          <label class="mdl-textfield__label" for="user_username">Username...</label>
        </div>

        
        <i class="material-icons">sentiment_satisfied_alt</i>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" name="status" type="text" value="<%= account.session.status %>" id="user_status">
          <label class="mdl-textfield__label" for="user_status">Digite seu status...</label>
        </div>
<br/>
        <i class="material-icons">vpn_key</i>&nbsp;&nbsp;&nbsp;
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <a href="/api/settings" style="text-decoration: underline blue; color: blue ;"> <small>alterar senha</small></a>
        </div>
        



        
        
      






