<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input class="mdl-textfield__input" name="cep" value="<%= account.session.location.postalCode %>" type="text" id="cep">
      <label class="mdl-textfield__label" for="cep">CEP...</label>
  </div>


<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input class="mdl-textfield__input" name="logradouro" value="<%= account.session.location.streetAddress %>" type="text" id="logradouro">
